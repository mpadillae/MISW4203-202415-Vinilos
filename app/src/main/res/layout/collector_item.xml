<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:background="@color/white"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/collector_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_400"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:id="@+id/collector_name"
        app:layout_constraintTop_toBottomOf="@+id/collector_card"
        app:layout_constraintStart_toStartOf="@+id/collector_card"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textFontWeight="600"
        android:letterSpacing="0.02"
        android:textColor="@color/black" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/collector_email"
        app:layout_constraintTop_toBottomOf="@+id/collector_name"
        app:layout_constraintStart_toStartOf="@+id/collector_name"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/collector_initials"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:textSize="12sp"
        android:textAllCaps="true"
        android:padding="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>